@model CSR.Models.User
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IStringLocalizer<CSR.SharedStrings> SharedLocalizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<partial name="_PageTitlePartial" />

<h3>@Localizer["ConfirmationMessage"]</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.EmpNo)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.EmpNo)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.EmailAddr)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.EmailAddr)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.AdminFlag)
        </dt>
        <dd class="col-sm-9">
            @(Model.AdminFlag ? SharedLocalizer["Yes"] : SharedLocalizer["No"])
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.RegDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.RegDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="@SharedLocalizer["Button_Delete"]" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">@SharedLocalizer["Button_Cancel"]</a>
    </form>
</div>
