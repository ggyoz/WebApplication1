@model CSR.Models.User
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IStringLocalizer<CSR.SharedStrings> SharedLocalizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<partial name="_PageTitlePartial" />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <table class="table-layout Details">

                    <colgroup>
                        <col width="8%"></col>
                        <col width="10%"></col>
                        <col width="8%"></col>
                        <col width="10%"></col>
                        <col width="8%"></col>
                        <col width="10%"></col>
                        <col width="8%"></col>
                        <col width="10%"></col>
                    </colgroup>
                
                <tr>
                    <td><label class="control-label">@SharedLocalizer["Label_UserId"]</label></td>
                    <td>@Html.DisplayFor(model => model.UserId)</td>
                    <td><label class="control-label">@SharedLocalizer["Label_UserName"]</label></td>
                    <td>@Html.DisplayFor(model => model.UserName)</td>
                    <td><label class="control-label">@SharedLocalizer["Label_EmployeeNo"]</label></td>
                    <td>@Html.DisplayFor(model => model.EmpNo)</td>
                    <td><label class="control-label">@SharedLocalizer["Label_InUse"]</label></td>
                    <td>@(Model.UseYn == "Y" ? SharedLocalizer["Used"] : SharedLocalizer["NotUsed"])</td>
                </tr>
                <tr>
                    <td><label class="control-label">@SharedLocalizer["Label_PhoneNumber"]</label></td>
                    <td>@Html.DisplayFor(model => model.TelNo)</td>
                    <td><label class="control-label">@SharedLocalizer["Label_MobilePhoneNumber"]</label></td>
                    <td>@Html.DisplayFor(model => model.MobPhoneNo)</td>
                    <td><label class="control-label">@SharedLocalizer["Label_EmailAddress"]</label></td>
                    <td>@Html.DisplayFor(model => model.EmailAddr)</td>
                    <td><label class="control-label">@SharedLocalizer["Label_RetirementDate"]</label></td>
                    <td>@Html.DisplayFor(model => model.RetireDate)</td>
                </tr>                
                <tr>
                    <td><label class="control-label">@SharedLocalizer["Label_CorporationCode"]</label></td>
                    <td>@Html.DisplayFor(model => model.CorCd)</td>
                    <td><label class="control-label">@SharedLocalizer["Label_BusinessUnitCode"]</label></td>
                    <td>@Html.DisplayFor(model => model.DeptCd)</td>
                    <td><label class="control-label">@SharedLocalizer["Label_OfficeCode"]</label></td>
                    <td>@Html.DisplayFor(model => model.OfficeCd)</td>
                    <td><label class="control-label">@SharedLocalizer["Label_TeamCode"]</label></td>
                    <td>@Html.DisplayFor(model => model.TeamCd)</td>
                </tr>
                
                <tr>
                    <td><label class="control-label">@SharedLocalizer["Label_SystemCode"]</label></td>
                    <td>@Html.DisplayFor(model => model.SysCd)</td>
                    <td><label class="control-label">@SharedLocalizer["Label_BusinessPlaceCode"]</label></td>
                    <td>@Html.DisplayFor(model => model.BizCd)</td>
                    <td><label class="control-label">@SharedLocalizer["Label_CustomerCode"]</label></td>
                    <td>@Html.DisplayFor(model => model.CustCd)</td>
                    <td><label class="control-label">@SharedLocalizer["Label_VendorCode"]</label></td>
                    <td>@Html.DisplayFor(model => model.VendCd)</td>
                </tr>
                <tr>
                    <td><label class="control-label">@SharedLocalizer["Label_UserStat"]</label></td>
                    <td>@Html.DisplayFor(model => model.UserStat)</td>
                    <td><label class="control-label">@SharedLocalizer["Label_UserDivision"]</label></td>
                    <td>@Html.DisplayFor(model => model.UserDiv)</td>
                    <td><label class="control-label">@SharedLocalizer["Label_AdminPrivileges"]</label></td>
                    <td>@(Model.AdminFlag ? SharedLocalizer["Yes"] : SharedLocalizer["No"])</td>
                    <td><label class="control-label">@SharedLocalizer["Label_Authorization"]</label></td>
                    <td>@(Model.AuthFlag == 1 ? SharedLocalizer["Yes"] : SharedLocalizer["No"])</td>
                </tr>
                <tr>
                    <td><label class="control-label">@SharedLocalizer["Label_PasswordFailCount"]</label></td>
                    <td>@Html.DisplayFor(model => model.PwMissCount)</td>
                </tr>
            </table>
        </div>
    </div>
</div>

<!-- 버튼영역 -->
<div class="d-flex justify-content-between align-items-center mt-5">
    <div>
        <a asp-action="Delete" asp-route-id="@Model?.UserId" class="btn btn-danger">@SharedLocalizer["Button_Delete"]</a>
    </div>
    <div>
        <form asp-action="ResetPassword" asp-route-id="@Model?.UserId" method="post" style="display:inline;">
            <button type="submit" class="btn btn-outline-dark">@SharedLocalizer["Button_ResetPassword"]</button>
        </form>
        <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-primary">@SharedLocalizer["Button_Edit"]</a>
        <a asp-action="Index" class="btn btn-list">@SharedLocalizer["Button_BackToList"]</a>
    </div>
</div>
<!-- 버튼영역 -->
