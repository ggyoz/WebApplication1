@model IEnumerable<CSR.Models.User>

@{
    ViewData["Title"] = "사용자 관리";
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

<p class="text-end">
    <a asp-action="Create" class="btn btn-primary">새 사용자 추가</a>
</p>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.UserId)</th>
                    <th>@Html.DisplayNameFor(model => model.UserName)</th>
                    <th>@Html.DisplayNameFor(model => model.EmpNo)</th>
                    <th>@Html.DisplayNameFor(model => model.EmailAddr)</th>
                    <th>@Html.DisplayNameFor(model => model.AdminFlag)</th>
                    <th>@Html.DisplayNameFor(model => model.RegDate)</th>
                    <th>작업</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    @await Html.PartialAsync("_UserRow", user)
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-muted">사용자가 없습니다.</p>
}
