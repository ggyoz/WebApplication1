@model CSR.Models.User

@{
    ViewData["Title"] = "사용자 수정";
}

<h1>사용자 수정</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="RegDate" />
            <input type="hidden" asp-for="RegUserId" />

            <table class="table-layout">
                <tr>
                    <td><label asp-for="UserId" class="control-label"></label></td>
                    <td><input asp-for="UserId" class="form-control" readonly /></td>
                    <td><label asp-for="UserName" class="control-label"></label></td>
                    <td>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </td>
                </tr>
                 <tr>
                    <td><label asp-for="UserPwd" class="control-label"></label></td>
                    <td>
                        <input asp-for="UserPwd" class="form-control" type="password" placeholder="변경할 경우에만 입력" />
                        <span asp-validation-for="UserPwd" class="text-danger"></span>
                    </td>
                    <td><label asp-for="EmpNo" class="control-label"></label></td>
                    <td>
                        <input asp-for="EmpNo" class="form-control" />
                        <span asp-validation-for="EmpNo" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="Status" class="control-label"></label></td>
                    <td>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </td>
                    <td><label asp-for="UseYn" class="control-label"></label></td>
                    <td>
                        <input asp-for="UseYn" class="form-control" />
                        <span asp-validation-for="UseYn" class="text-danger"></span>
                    </td>
                </tr>
                 <tr>
                    <td><label asp-for="CorCd" class="control-label"></label></td>
                    <td>
                        <input asp-for="CorCd" class="form-control" />
                        <span asp-validation-for="CorCd" class="text-danger"></span>
                    </td>
                    <td><label asp-for="DeptCd" class="control-label"></label></td>
                    <td>
                        <input asp-for="DeptCd" class="form-control" />
                        <span asp-validation-for="DeptCd" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="OfficeCd" class="control-label"></label></td>
                    <td>
                        <input asp-for="OfficeCd" class="form-control" />
                        <span asp-validation-for="OfficeCd" class="text-danger"></span>
                    </td>
                    <td><label asp-for="TeamCd" class="control-label"></label></td>
                    <td>
                        <input asp-for="TeamCd" class="form-control" />
                        <span asp-validation-for="TeamCd" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="SysCd" class="control-label"></label></td>
                    <td>
                        <input asp-for="SysCd" class="form-control" />
                        <span asp-validation-for="SysCd" class="text-danger"></span>
                    </td>
                    <td><label asp-for="BizCd" class="control-label"></label></td>
                    <td>
                        <input asp-for="BizCd" class="form-control" />
                        <span asp-validation-for="BizCd" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="TelNo" class="control-label"></label></td>
                    <td>
                        <input asp-for="TelNo" class="form-control" />
                        <span asp-validation-for="TelNo" class="text-danger"></span>
                    </td>
                    <td><label asp-for="MobPhoneNo" class="control-label"></label></td>
                    <td>
                        <input asp-for="MobPhoneNo" class="form-control" />
                        <span asp-validation-for="MobPhoneNo" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="EmailAddr" class="control-label"></label></td>
                    <td>
                        <input asp-for="EmailAddr" class="form-control" type="email" />
                        <span asp-validation-for="EmailAddr" class="text-danger"></span>
                    </td>
                    <td><label asp-for="RetireDate" class="control-label"></label></td>
                    <td>
                        <input asp-for="RetireDate" class="form-control" />
                        <span asp-validation-for="RetireDate" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="CustCd" class="control-label"></label></td>
                    <td>
                        <input asp-for="CustCd" class="form-control" />
                        <span asp-validation-for="CustCd" class="text-danger"></span>
                    </td>
                    <td><label asp-for="VendCd" class="control-label"></label></td>
                    <td>
                        <input asp-for="VendCd" class="form-control" />
                        <span asp-validation-for="VendCd" class="text-danger"></span>
                    </td>
                </tr>
                 <tr>
                    <td><label asp-for="UserDiv" class="control-label"></label></td>
                    <td>
                        <input asp-for="UserDiv" class="form-control" />
                        <span asp-validation-for="UserDiv" class="text-danger"></span>
                    </td>
                    <td><label asp-for="PwMissCount" class="control-label"></label></td>
                    <td>
                        <input asp-for="PwMissCount" class="form-control" type="number" />
                        <span asp-validation-for="PwMissCount" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="AdminFlag" class="control-label"></label></td>
                    <td>
                        <div class="form-check">
                            <input asp-for="AdminFlag" class="form-check-input" type="checkbox" />
                        </div>
                    </td>
                    <td><label asp-for="AuthFlag" class="control-label"></label></td>
                     <td>
                        <div class="form-check">
                            <input asp-for="AuthFlag" class="form-check-input" type="checkbox" value="1" />
                        </div>
                    </td>
                </tr>
                 <tr>
                    <td><label asp-for="RegDate" class="control-label"></label></td>
                    <td><input asp-for="RegDate" class="form-control" readonly /></td>
                    <td><label asp-for="RegUserId" class="control-label"></label></td>
                    <td><input asp-for="RegUserId" class="form-control" readonly /></td>
                </tr>
                 <tr>
                    <td><label asp-for="UpdateDate" class="control-label"></label></td>
                    <td><input asp-for="UpdateDate" class="form-control" readonly /></td>
                    <td><label asp-for="UpdateUserId" class="control-label"></label></td>
                    <td><input asp-for="UpdateUserId" class="form-control" readonly /></td>
                </tr>
            </table>

            <div class="button-area mt-3">
                <input type="submit" value="저장" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">목록으로</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
