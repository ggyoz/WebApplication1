@model ReqInfo
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IStringLocalizer<CSR.SharedStrings> SharedLocalizer

@{
    ViewData["Title"] = "요구사항 상세";
}

<partial name="_PageTitlePartial" />

<div>
    <h4>@Model.TITLE</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <table class="table-layout Details">
                <colgroup>
                    <col width="10%"></col>
                    <col width="15%"></col>
                    <col width="10%"></col>
                    <col width="15%"></col>
                    <col width="10%"></col>
                    <col width="15%"></col>
                    <col width="10%"></col>
                    <col width="15%"></col>
                </colgroup>
                <tr>
                    <td><label>@Html.DisplayNameFor(model => model.REQID)</label></td>
                    <td>@Model.REQID</td>
                    <td><label>@Html.DisplayNameFor(model => model.SystemName)</label></td>
                    <td>@Model.SystemName</td>
                    <td><label>@Html.DisplayNameFor(model => model.ReqTypeName)</label></td>
                    <td>@Model.ReqTypeName</td>
                    <td><label>@Html.DisplayNameFor(model => model.PriorityName)</label></td>
                    <td>@Model.PriorityName</td>
                </tr>
                <tr>
                    <td><label>@Html.DisplayNameFor(model => model.ReqUserName)</label></td>
                    <td>@Model.ReqUserName</td>
                    <td><label>@Html.DisplayNameFor(model => model.ResUserName)</label></td>
                    <td>@Model.ResUserName</td>
                    <td><label>@Html.DisplayNameFor(model => model.REQDATE)</label></td>
                    <td>@Model.REQDATE.ToString("yyyy-MM-dd")</td>
                    <td><label>@Html.DisplayNameFor(model => model.EXPECTDATE)</label></td>
                    <td>@( Model.EXPECTDATE.HasValue ? Model.EXPECTDATE.Value.ToString("yyyy-MM-dd") : "미정")</td>
                </tr>
                <tr>
                    <td><label>@Html.DisplayNameFor(model => model.ProcStatusName)</label></td>
                    <td>@(Model.ProcStatusName != null ? Model.ProcStatusName : "대기")</td>
                    <td><label>@Html.DisplayNameFor(model => model.PROC_RATE)</label></td>
                    <td colspan="5">@Model.PROC_RATE%</td>
                </tr>
            </table>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">@Html.DisplayNameFor(model => model.CONTENTS_HTML)</div>
        <div class="card-body content-display">
            @Html.Raw(Model.CONTENTS_HTML)
        </div>
    </div>
    
    @if (!string.IsNullOrEmpty(Model.NOTE_HTML))
    {
        <div class="card mt-4">
            <div class="card-header">@Html.DisplayNameFor(model => model.NOTE_HTML)</div>
            <div class="card-body content-display">
                @Html.Raw(Model.NOTE_HTML)
            </div>
        </div>
    }

    @if (Model.AttachFiles.Any())
    {
        <div class="card mt-4">
            <div class="card-header">@SharedLocalizer["Label_Attachments"]</div>
            <ul class="list-group list-group-flush">
                @foreach(var file in Model.AttachFiles)
                {
                    <li class="list-group-item">
                        <a asp-action="DownloadFile" asp-route-id="@file.FILEID">@file.REAL_FILENAME</a>
                    </li>
                }
            </ul>
        </div>
    }
</div>

<div class="mt-4">
    <h5>@SharedLocalizer["Label_History"]</h5>
    <table class="table table-sm table-bordered">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.History.First().HISTORYID)</th>
                <th>@Html.DisplayNameFor(model => model.History.First().REG_USERID)</th>
                <th>@Html.DisplayNameFor(model => model.History.First().REG_DATE)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hist in Model.History)
            {
                <tr>
                    <td>@hist.HISTORYID</td>
                    <td>@hist.REG_USERID</td>
                    <td>@hist.REG_DATE.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-between align-items-center mt-5">
    <div>
        <form asp-action="Delete" asp-route-id="@Model.REQID" method="post">
            <button type="submit" class="btn btn-danger" onclick="return confirm('@SharedLocalizer["Confirmation_Delete"]')">
                @SharedLocalizer["Button_Delete"]
            </button>
        </form>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.REQID" class="btn btn-primary">@SharedLocalizer["Button_Edit"]</a>
        <a asp-action="Index" class="btn btn-list">@SharedLocalizer["Button_List"]</a>
    </div>
</div>

@section Scripts {
<style>
    .content-display {
        min-height: 150px;
    }
    .table-layout.Details td {
        padding: 8px 12px;
    }
    .table-layout.Details label {
        font-weight: bold;
    }
</style>
}
