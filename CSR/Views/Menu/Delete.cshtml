@model CSR.Models.Menu
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<partial name="_PageTitlePartial" />

<h3>정말로 이 메뉴를 삭제하시겠습니까?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">이름</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        
        <dt class="col-sm-2">레벨</dt>
        <dd class="col-sm-10">
            @if (Model.MenuLevel == 1)
            {
                <span class="badge bg-primary">1단계</span>
            }
            else if (Model.MenuLevel == 2)
            {
                <span class="badge bg-info">2단계</span>
            }
            else
            {
                <span class="badge bg-secondary">3단계</span>
            }
        </dd>
        
        <dt class="col-sm-2">링크</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Url))
            {
                <span>@Model.Url</span>
            }
            else if (!string.IsNullOrEmpty(Model.Controller) && !string.IsNullOrEmpty(Model.Action))
            {
                <span>@Model.Controller/@Model.Action</span>
            }
            else
            {
                <span class="text-muted">-</span>
            }
        </dd>
        
        <dt class="col-sm-2">순서</dt>
        <dd class="col-sm-10">@Model.DisplayOrder</dd>
        
        <dt class="col-sm-2">상태</dt>
        <dd class="col-sm-10">
            @if (Model.UseYn == "Y")
            {
                <span class="badge bg-success">활성</span>
            }
            else
            {
                <span class="badge bg-secondary">비활성</span>
            }
        </dd>
    </dl>
    
    @if (Model.Children != null && Model.Children.Any())
    {
        <div class="alert alert-warning">
            <strong>경고:</strong> 이 메뉴에는 @Model.Children.Count 개의 하위 메뉴가 있습니다. 
            삭제하면 모든 하위 메뉴도 함께 삭제됩니다.
        </div>
    }
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="삭제" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">취소</a>
    </form>
</div>

