@using CSR.Models
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Mvc.Rendering
@inject CSR.Services.MenuService MenuService
@inject IOptions<RequestLocalizationOptions> LocOptions
@inject IStringLocalizer<CSR.SharedStrings> SharedLocalizer
@{
    var menuTree = await MenuService.GetMenuTreeAsync(activeOnly: true);
    
    var activeMenuIds = new HashSet<string>();
    Menu? activeMenu = null;
    
    var currentPath = Context.Request.Path;
    
    Func<List<Menu>, string, Menu?>? findMenuByPath = null;
    findMenuByPath = (menus, path) => {
        foreach (var menu in menus)
        {
            if (menu.GetLink().Equals(path, StringComparison.OrdinalIgnoreCase))
            {
                return menu;
            }
            if (menu.Children != null)
            {
                var found = findMenuByPath!(menu.Children, path);
                if (found != null)
                {
                    return found;
                }
            }
        }
        return null;
    };

    activeMenu = findMenuByPath(menuTree, currentPath);

    if (activeMenu != null)
    {
        var tempMenu = activeMenu;
        while (tempMenu != null)
        {
            activeMenuIds.Add(tempMenu.MenuId);
            tempMenu = tempMenu.Parent;
        }
    }
    
    ViewData["ActiveMenuIds"] = activeMenuIds;
    ViewData["CurrentPath"] = currentPath;

    // 다국어 선택을 위한 준비
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultureItems = LocOptions.Value.SupportedUICultures
        .Select(c => new SelectListItem { Value = c.Name, Text = c.NativeName })
        .ToList();
        
}

<!DOCTYPE html>
<html lang="@requestCulture.RequestCulture.UICulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/autocomplete.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CSR.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/button.css" asp-append-version="true" />
    <script src="~/js/common.js"></script>
    <script src="~/js/autocomplete.js"></script>
    <script src="~/js/lodash.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark navbar-custom border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/image/home.png" alt="Home" class="navbar-logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @foreach(var menu in menuTree)
                        {
                            // "시스템 관리" 메뉴 (MenuId = "1")는 R3(관리자) 또는 R4(슈퍼관리자)만 접근 가능
                            @if (menu.MenuId == "1" && !(User.IsInRole("R3") || User.IsInRole("R4")))
                            {
                                continue; // 해당 역할이 아니면 건너뛰기
                            }
                            
                            <li class="nav-item">
                                <a class="nav-link nav-link-custom" href="@MenuService.FindDeepestAndFirstMenu(menu).GetLink()">@menu.MenuName</a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex">
                        <!-- 여기에 다국어 설정 추가 -->
                        <form id="setLanguageForm" asp-controller="Home" asp-action="SetLanguage" asp-route-returnUrl="@Context.Request.Path" method="post" class="d-inline-flex me-2">
                            <select name="culture" asp-for="@requestCulture.RequestCulture.UICulture.Name" asp-items="cultureItems"
                                    onchange="this.form.submit();" class="form-select form-select-sm">
                            </select>
                        </form>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <span class="navbar-text me-2">@User.FindFirst("UserName")?.Value 님</span>
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-secondary">@SharedLocalizer["Button_Logout"]</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login">@SharedLocalizer["Button_Login"]</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper" class="flex-shrink-0 p-3 bg-white" style="width: 230px;">
            <ul class="list-unstyled ps-0">
                @await Html.PartialAsync("_MenuPartial", menuTree)
                
                <li class="border-top my-3"></li>
                <!-- <li class="mb-1">
                     <a href="/Menu/Index" class="btn btn-toggle-link align-items-center rounded text-decoration-none">
                        ⚙️ 메뉴 관리
                    </a>
                </li> -->
            </ul>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <main role="main" class="pb-3 mt-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CSR - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <partial name="_ToastPartial" />

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>    
        function showToast(message, type = 'success') {
            const toastContainer = document.getElementById('toastContainer');
            const toastId = 'toast-' + Date.now();
            const bgClass = type === 'success' ? 'bg-success' : 'bg-danger';

            const toastHTML = `
                <div id="${toastId}" class="toast align-items-center text-white ${bgClass} border-0" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            `;
            
            toastContainer.insertAdjacentHTML('beforeend', toastHTML);
            
            const toastElement = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastElement, { delay: 3000 });

            toastElement.addEventListener('hidden.bs.toast', function () {
                toastElement.remove();
            });

            toast.show();
        }
    </script>

</body>
</html>
