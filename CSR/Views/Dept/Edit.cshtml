@model CSR.Models.Dept
@inject IStringLocalizer<CSR.SharedStrings> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Title_EditDept"];
    var allDepts = ViewBag.AllDepts as List<Dept> ?? new List<Dept>();
    // 자기 자신과 자신의 하위 부서는 부모 리스트에서 제외
    var availableParents = allDepts.Where(d => d.DeptId != Model.DeptId).ToList();
}

<partial name="_PageTitlePartial" />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeptId" />

            <div class="form-group mb-3">
                <label asp-for="DeptName" class="control-label">@SharedLocalizer["Label_DeptName"] *</label>
                <input asp-for="DeptName" class="form-control" />
                <span asp-validation-for="DeptName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ParentId" class="control-label">@SharedLocalizer["Label_ParentDept"]</label>
                <select asp-for="ParentId" class="form-select" asp-items="@(new SelectList(availableParents, "DeptId", "DeptName"))">
                    <option value="">@SharedLocalizer["Option_NoParent"]</option>
                </select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DeptCd" class="control-label">@SharedLocalizer["Label_DeptCode"]</label>
                        <input asp-for="DeptCd" class="form-control" />
                        <span asp-validation-for="DeptCd" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CorCd" class="control-label">@SharedLocalizer["Label_CorporationCode"] *</label>
                        <input asp-for="CorCd" class="form-control" />
                        <span asp-validation-for="CorCd" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Note" class="control-label">@SharedLocalizer["Label_Description"]</label>
                <textarea asp-for="Note" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="SortOrder" class="control-label">@SharedLocalizer["Label_SortOrder"]</label>
                        <input asp-for="SortOrder" class="form-control" type="number" />
                        <span asp-validation-for="SortOrder" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                     <div class="form-group mb-3">
                        <label class="control-label">@SharedLocalizer["Label_InUse"]</label>
                        <div class="form-check">
                            <input type="radio" asp-for="UseYn" id="useYnYes" value="Y" class="form-check-input" />
                            <label class="form-check-label" for="useYnYes">@SharedLocalizer["Used"]</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" asp-for="UseYn" id="useYnNo" value="N" class="form-check-input" />
                            <label class="form-check-label" for="useYnNo">@SharedLocalizer["NotUsed"]</label>
                        </div>
                        <span asp-validation-for="UseYn" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="@SharedLocalizer["Button_Save"]" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">@SharedLocalizer["Button_BackToList"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
