@model PagedResult<Notice>
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Authorization
@inject IStringLocalizer<CSR.SharedStrings> SharedLocalizer
@inject IViewLocalizer Localizer
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<partial name="_PageTitlePartial" />

<div class="search-area card">
    <div class="search-body">
        <form asp-action="Index" method="get">
            <table class="table table-bordered">
                 <colgroup>
                    <col width="8%"></col>
                    <col width="15%"></col>
                    <col width="8%"></col>
                    <col width="15%"></col>                    
                </colgroup>
                <tbody>
                    <tr>
                        <th class="align-middle text-center">@SharedLocalizer["Label_Title"]</th>
                        <td>
                            <input type="text" name="searchValue" class="form-control" value="@ViewData["SearchValue"]">
                        </td>
                        <th></th>
                        <td></td> 
                        <td colspan="4" class="text-end">
                            <button type="submit" class="btn btn-light search-btn">@SharedLocalizer["Button_Search"]</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>

<div class="d-flex justify-content-between mb-3 align-items-center">
    <div>
        @if (Model.TotalCount > 0)
        {
            <p class="text-muted mb-0">@Localizer["TotalNotices", Model.TotalCount]</p>
        }
    </div>
    <div>
        @if ((await AuthorizationService.AuthorizeAsync(User, "RequireManagerOrHigher")).Succeeded)
        {
            <a asp-action="Create" class="btn btn-add">@Localizer["CreateNew"]</a>
        }
    </div>
</div>

@if (Model.Items != null && Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                 <colgroup>
                    <col width="10%"/>
                    <col width="15%"/>
                    <col width="*"/>
                    <col width="15%"/>
                    <col width="20%"/>
                </colgroup>
                <tr>
                    <th>@Localizer["Header_ID"]</th>
                    <th>@SharedLocalizer["Label_Type"]</th>
                    <th>@SharedLocalizer["Label_Title"]</th>
                    <th>@Localizer["Header_Author"]</th>
                    <th>@SharedLocalizer["Label_RegistrationDate"]</th>
                    @if ((await AuthorizationService.AuthorizeAsync(User, "RequireManagerOrHigher")).Succeeded)
                        {
                            <th>@SharedLocalizer["Button_Edit"]</th>
                        }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr style="cursor: pointer;" onclick="window.location.href = '@Url.Action("Details", "Notice", new { id = item.ID })';">
                        <td>@item.ID</td>
                        <td>@item.CodeName</td>
                        <td>@item.TITLE</td>
                        <td>@item.RegUserName</td>
                        <td>@item.REG_DATE.ToString("yyyy-MM-dd")</td>
                        @if ((await AuthorizationService.AuthorizeAsync(User, "RequireManagerOrHigher")).Succeeded)
                            {
                        <td>
                            <div class="btn-group btn-group-sm" onclick="event.stopPropagation();">
                                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-secondary">@SharedLocalizer["Button_Edit"]</a>
                            </div>
                            
                        </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <partial name="_PagingPartial" model="Model" />
}
else
{
    <p class="text-muted">@Localizer["NoNotices"]</p>
}
