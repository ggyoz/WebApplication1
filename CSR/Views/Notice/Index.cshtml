@model PagedResult<Notice>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IStringLocalizer<CSR.SharedStrings> SharedLocalizer
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Notice Board";
}

<partial name="_PageTitlePartial" />

<div class="search-area card">
    <div class="search-body">
        <form asp-action="Index" method="get">
            <table class="table table-bordered">
                 <colgroup>
                    <col width="8%"></col>
                    <col width="15%"></col>
                    <col width="8%"></col>
                    <col width="15%"></col>
                    <col width="*"></col>
                </colgroup>
                <tbody>
                    <tr>
                        <th class="align-middle text-center">@SharedLocalizer["Title"]</th>
                        <td>
                            <input type="text" name="searchValue" class="form-control" value="@ViewData["SearchValue"]">
                        </td>
                        <td class="text-end">
                            <button type="submit" class="btn btn-light search-btn">Search</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>

<div class="d-flex justify-content-between mb-3 align-items-center">
    <div>
        @if (Model.TotalCount > 0)
        {
            <p class="text-muted mb-0">Total Notices: @Model.TotalCount</p>
        }
    </div>
    <div>
        <a asp-action="Create" class="btn btn-add">Create New</a>
    </div>
</div>

@if (Model.Items != null && Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                 <colgroup>
                    <col width="10%"/>
                    <col width="*"/>
                    <col width="15%"/>
                    <col width="15%"/>
                    <col width="20%"/>
                </colgroup>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Registration Date</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@Html.ActionLink(item.TITLE, "Details", new { id=item.ID })</td>
                        <td>@item.RegUserName</td>
                        <td>@item.REG_DATE.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-info">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-primary">Details</a>
                            <form asp-action="Delete" asp-route-id="@item.ID" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this notice?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <partial name="_PagingPartial" model="Model" />
}
else
{
    <p class="text-muted">No notices to display.</p>
}
