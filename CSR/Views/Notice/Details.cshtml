@model Notice
@{
    ViewData["Title"] = Model.TITLE;
}

<div class="page-header">
    <h1>@Model.TITLE</h1>
    <p class="text-muted">By @Model.RegUserName on @Model.REG_DATE.ToString("yyyy-MM-dd")</p>
</div>

<div>
    <hr />
    <div class="notice-content">
        @Html.Raw(Model.CONTENTS_HTML)
    </div>
    <hr />

    @if (Model.AttachFiles.Any())
    {
        <h4>Attachments</h4>
        <ul class="list-group">
            @foreach (var file in Model.AttachFiles)
            {
                <li class="list-group-item">
                    <a asp-action="DownloadFile" asp-route-id="@file.FILEID">@file.REAL_FILENAME</a>
                </li>
            }
        </ul>
    }
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
