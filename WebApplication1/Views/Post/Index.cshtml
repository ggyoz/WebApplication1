@model IEnumerable<WebApplication1.Models.Post>

@{
    ViewData["Title"] = "요청사항 목록";
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        <h5>오류 발생</h5>
        <p>@ViewBag.Error</p>
        @if (ViewBag.DetailedError != null)
        {
            <details class="mt-2">
                <summary>상세 오류 정보</summary>
                <pre class="mt-2 p-2 bg-light border rounded" style="font-size: 0.85em; max-height: 300px; overflow: auto;">@ViewBag.DetailedError</pre>
            </details>
        }
    </div>
}



@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>번호</th>
                <th>제목</th>
                <th>내용</th>
                <th>작성일</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@(item.Content.Length > 50 ? item.Content.Substring(0, 50) + "..." : item.Content)</td>
                    <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">상세보기</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>요청사항이 없습니다.</p>
}

<p class="text-end">
    <a asp-action="Create" class="btn btn-primary float-end">요청사항 등록</a>
</p>